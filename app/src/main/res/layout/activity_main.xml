<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acadgild.com.session6_assignment2.MainActivity"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:layout_height="match_parent" >

        <Button
            android:text="Layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLayout1"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/btnBottomMargin"
            android:layout_marginLeft="@dimen/btnLeftMargin"
            android:layout_marginRight="@dimen/btnRightMargin"
            android:background="@color/red"
            android:onClick="onSelectFragment"/>

        <Button
            android:text="Layout2"
            android:layout_marginBottom="@dimen/btnBottomMargin"
            android:layout_marginLeft="@dimen/btnLeftMargin"
            android:layout_marginRight="@dimen/btnRightMargin"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLayout2"

            android:textColor="@color/white"
            android:onClick="onSelectFragment"/>

        <Button
            android:text="Layout3"
            android:layout_marginBottom="@dimen/btnBottomMargin"
            android:layout_marginLeft="@dimen/btnLeftMargin"
            android:layout_marginRight="@dimen/btnRightMargin"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:id="@+id/btnLayout3"
            android:onClick="onSelectFragment"/>

        <Button
            android:text="Layout4"
            android:layout_marginBottom="@dimen/btnBottomMargin"
            android:layout_marginLeft="@dimen/btnLeftMargin"
            android:layout_marginRight="@dimen/btnRightMargin"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLayout4"

            android:textColor="@color/white"
            android:onClick="onSelectFragment"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/displayFragments"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"></LinearLayout>
</LinearLayout>
